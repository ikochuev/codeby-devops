pipeline {
    agent { label 'maven-agent25' }      // ‚úÖ –¢–≤–æ–π –∞–≥–µ–Ω—Ç –∏–∑ lesson25
    tools { maven 'maven25' }            // ‚úÖ Maven tool –∏–∑ Global Config
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'ls -la lesson26/'  // ‚úÖ Debug: –ø–æ–∫–∞–∂–∏ —Å—Ç—Ä—É–∫—Ç—É—Ä—É
            }
        }
        
        stage('Maven Build') {
            steps {
                sh 'mvn clean package -f lesson26/hello-world/pom.xml'
                sh 'mvn clean package -f lesson26/hello-jenkins/pom.xml'
                sh 'mvn clean package -f lesson26/hello-devops/pom.xml'
            }
        }
        
        stage('Maven Test') {
            steps {
                sh 'mvn test -f lesson26/hello-world/pom.xml'
            }
        }
    }
    
    post {
        always {
            // ‚úÖ –û—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω—ã–µ –ø—É—Ç–∏ –æ—Ç workspace (lesson26/)
            junit 'lesson26/hello-world/target/surefire-reports/*.xml[attached_file:1]'
            archiveArtifacts artifacts: 'lesson26/*/target/*.jar', allowEmptyArchive: true
        }
        success {
            echo 'üéâ lesson26 BUILD SUCCESS!'
        }
    }
}
