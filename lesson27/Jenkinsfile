pipeline {
    agent { label 'maven-agent25' }
    tools { maven 'Maven3' }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'pwd && ls -la lesson26/'
            }
        }
        
        stage('Build Hello World') {
            steps {
                dir('lesson26/hello-world') {
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('SonarQube Analysis') {
            steps {
                dir('lesson26/hello-world') {
                    withSonarQubeEnv(installationName: 'SonarQube', credentialsId: 'sonar') {
                        sh '''
                            mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.9.1.2184:sonar \
                              -Dsonar.projectKey=lesson27-hello-world \
                              -Dsonar.projectName="Hello World" \
                              -Dsonar.sources=src \
                              -Dsonar.java.binaries=target/classes \
                              -Dsonar.host.url=http://192.168.1.14:9000
                        '''
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
        stage('Maven Build') {
            steps {
                sh 'mvn clean package -f lesson26/hello-world/pom.xml'
                sh 'mvn clean package -f lesson26/hello-jenkins/pom.xml'
                sh 'mvn clean package -f lesson26/hello-devops/pom.xml'
            }
        }
        
        stage('Maven Test') {
            steps {
                sh 'mvn test -f lesson26/hello-world/pom.xml'
            }
        }
    }
    
    post {
        always {
            junit 'lesson26/hello-world/target/surefire-reports/*.xml'
            archiveArtifacts artifacts: 'lesson26/*/target/*.jar', allowEmptyArchive: true
        }
        success { echo 'lesson27 BUILD SUCCESS!' }
        failure { echo 'BUILD FAILED - Quality Gate!' }
    }
}
