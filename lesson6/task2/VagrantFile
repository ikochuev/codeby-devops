Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  config.vm.define "server" do |server|
    server.vm.hostname = "server"
    server.vm.network "private_network", ip: "192.168.60.20"
    server.vm.provision "shell", path: "provision-server.sh", privileged: false
  end

  config.vm.define "client" do |client|
    client.vm.hostname = "client"
    client.vm.network "private_network", ip: "192.168.60.10"
    client.vm.provision "shell", path: "provision-client.sh", privileged: false
  end
end

